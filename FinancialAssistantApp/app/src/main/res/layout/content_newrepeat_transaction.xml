<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_newrepeat"
        tools:context="com.coderaptor.financial.assistant.app.AddNewRepeatActivity"
        android:background="@android:color/transparent">

    <!--Cím-->
    <TextView
            android:text="@string/newRepeatTransaction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:gravity="center_horizontal"
            android:textSize="24sp"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            android:id="@+id/cim"/>
    <!--Tranzakció-->
    <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="120dp"
            android:layout_marginEnd="120dp"
            android:gravity="center_horizontal"
            android:id="@+id/radioGroup"
            android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/cim">
        <RadioButton
                android:text="@string/cost"
                android:layout_width="15dp"
                android:layout_height="wrap_content"
                android:id="@+id/kiadas"
                android:buttonTint="@color/closed_fab"
                android:checked="true"
                android:layout_weight="1"/>
        <RadioButton
                android:text="@string/income_income"
                android:layout_width="15dp"
                android:layout_height="wrap_content"
                android:id="@+id/bevetel"
                android:buttonTint="@color/closed_fab"
                android:layout_weight="1"/>
    </RadioGroup>
    <!--Összeg-->
    <TextView
            android:text="@string/amount"
            android:layout_width="91dp"
            android:layout_height="31dp"
            android:id="@+id/label1"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="80dp"
            app:layout_constraintTop_toBottomOf="@+id/radioGroup" android:textSize="18sp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/amountField" app:layout_constraintHorizontal_bias="0.589"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:textAlignment="center"
            android:id="@+id/amountField"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="52dp"
            android:autofillHints=""
            android:hint="@string/hint_amount"
            tools:targetApi="o"
            android:layout_marginTop="68dp"
            app:layout_constraintTop_toBottomOf="@+id/radioGroup"
            android:backgroundTint="@color/colorPrimary"/>
    <!--Dátum-->
    <TextView
            android:text="@string/base_date_string"
            android:textColor="@color/black"
            android:layout_width="87dp"
            android:layout_height="31dp"
            android:id="@+id/label2"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/label1"
            android:textSize="18sp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/dateField"
            app:layout_constraintHorizontal_bias="0.558"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:textAlignment="center"
            android:id="@+id/dateField"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="52dp"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/amountField"
            android:autofillHints=""
            android:hint="@string/base_date_hint"
            android:inputType="date"
            tools:targetApi="o" android:backgroundTint="@color/colorPrimary"/>
    <!--Kategória-->
    <TextView
            android:text="@string/income_category"
            android:textColor="@color/black"
            android:layout_width="90dp"
            android:layout_height="31dp"
            android:id="@+id/label3"
            android:textSize="18sp"
            android:layout_marginEnd="24dp" app:layout_constraintEnd_toStartOf="@+id/categoryField"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/label2"/>
    <Spinner
            android:layout_width="213dp"
            android:layout_height="35dp"
            android:id="@+id/categoryField"
            android:textAlignment="center"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/dateField"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="52dp"
            android:entries="@array/income_category" android:backgroundTint="@color/colorPrimary"/>
    <!-- Gyakoriság-->
    <TextView
            android:text="@string/income_freq"
            android:textColor="@color/black"
            android:layout_width="102dp"
            android:layout_height="31dp"
            android:id="@+id/label4"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:textSize="18sp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/frequencyField"
            app:layout_constraintHorizontal_bias="0.821"
            android:layout_marginTop="28dp" app:layout_constraintTop_toBottomOf="@+id/label3"/>
    <Spinner
            android:layout_width="213dp"
            android:layout_height="35dp"
            android:textAlignment="center"
            android:id="@+id/frequencyField"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/categoryField"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="52dp"
            android:spinnerMode="dropdown"
            android:entries="@array/income_frequency" android:backgroundTint="@color/colorPrimary"/>
    <!--Rögzítés-->
    <Button
            android:text="@string/income_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.498"
            android:background="@color/closed_fab"
            android:layout_marginTop="52dp"
            android:textColor="@color/white"
            app:layout_constraintTop_toBottomOf="@+id/frequencyField"/>

</androidx.constraintlayout.widget.ConstraintLayout>