<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_income"
        tools:context="com.coderaptor.financial.assistant.app.IncomeActivity">
    <Spinner
            android:layout_width="213dp"
            android:layout_height="44dp"
            android:id="@+id/frequencyField" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/categoryField" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="96dp" android:spinnerMode="dropdown"
            android:entries="@array/income_frequency"/>
    <TextView
            android:text="@string/income_freq"
            android:layout_width="79dp"
            android:layout_height="31dp"
            android:id="@+id/label4"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="48dp"
            app:layout_constraintTop_toBottomOf="@+id/label3" app:layout_constraintEnd_toStartOf="@+id/categoryField"
            android:layout_marginEnd="8dp"/>
    <TextView
            android:text="@string/income_category"
            android:layout_width="70dp"
            android:layout_height="31dp"
            android:id="@+id/label3"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="48dp"
            app:layout_constraintTop_toBottomOf="@+id/label2" app:layout_constraintEnd_toStartOf="@+id/categoryField"
            android:layout_marginEnd="8dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/dateField" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="96dp" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/amountField" android:autofillHints="" android:hint="@string/hint_date"
            android:inputType="date" tools:targetApi="o"/>
    <TextView
            android:text="@string/date"
            android:layout_width="51dp"
            android:layout_height="31dp"
            android:id="@+id/label2"
            app:layout_constraintEnd_toStartOf="@+id/dateField"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="44dp"
            app:layout_constraintTop_toBottomOf="@+id/label1" app:layout_constraintHorizontal_bias="0.314"/>
    <TextView
            android:text="@string/income_income"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cim" android:textSize="24sp"
            android:layout_marginTop="24dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.498"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/amountField" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="96dp" android:layout_marginTop="56dp"
            app:layout_constraintTop_toBottomOf="@+id/cim" android:autofillHints="" android:hint="@string/hint_amount"
            tools:targetApi="o"/>
    <TextView
            android:text="@string/amount"
            android:layout_width="51dp"
            android:layout_height="31dp"
            android:id="@+id/label1"
            app:layout_constraintEnd_toStartOf="@+id/amountField"
            android:layout_marginEnd="16dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="56dp"
            app:layout_constraintTop_toBottomOf="@+id/cim" app:layout_constraintHorizontal_bias="0.296"/>
    <Spinner
            android:layout_width="213dp"
            android:layout_height="44dp"
            android:id="@+id/categoryField" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/dateField" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="96dp"
            android:entries="@array/income_category"/>
    <Button
            android:text="@string/income_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="44dp"
            app:layout_constraintTop_toBottomOf="@+id/frequencyField" app:layout_constraintHorizontal_bias="0.498"/>
</androidx.constraintlayout.widget.ConstraintLayout>
