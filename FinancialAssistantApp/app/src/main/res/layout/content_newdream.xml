<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_newdream"
        tools:context="com.coderaptor.financial.assistant.app.AddNewDreamActivity"
        android:background="@android:color/transparent">

    <!--Cím-->
    <TextView
            android:text="@string/newDream"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:gravity="center_horizontal"
            android:textSize="24sp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/cim"/>
    <!--Tranzakció-->
    <!--Ár-->
    <TextView
            android:text="@string/price"
            android:layout_width="91dp"
            android:layout_height="31dp"
            android:id="@+id/label1"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="40dp"
            android:textSize="18sp"
            android:layout_marginTop="52dp" app:layout_constraintTop_toBottomOf="@+id/label2"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/amountField"
            app:layout_constraintHorizontal_bias="0.0"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:textAlignment="center"
            android:id="@+id/amountField"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="44dp"
            android:autofillHints=""
            android:hint="@string/hint_amount"
            tools:targetApi="o"
            android:layout_marginTop="44dp" app:layout_constraintTop_toBottomOf="@+id/nameField"
            android:backgroundTint="@color/colorPrimary"/>
    <!--Termék-->

    <TextView
            android:text="@string/product"
            android:textColor="@color/black"
            android:layout_width="87dp"
            android:layout_height="31dp"
            android:id="@+id/label2"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:textSize="18sp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/nameField"
            app:layout_constraintHorizontal_bias="0.627" android:layout_marginTop="80dp"
            app:layout_constraintTop_toBottomOf="@+id/cim"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:textAlignment="center"
            android:id="@+id/nameField"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="44dp"
            android:autofillHints=""
            android:hint="@string/dream_name"
            android:inputType="text"
            tools:targetApi="o" android:layout_marginTop="68dp" app:layout_constraintTop_toBottomOf="@+id/cim"
            android:backgroundTint="@color/colorPrimary"/>
    <!--Hol-->
    <TextView
            android:text="@string/where"
            android:layout_width="91dp"
            android:layout_height="31dp"
            android:id="@+id/label3"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="40dp"
            android:textSize="18sp"
            android:layout_marginTop="64dp"
            app:layout_constraintTop_toBottomOf="@+id/label1"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/whereField"
            app:layout_constraintHorizontal_bias="0.0"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:ems="10"
            android:textAlignment="center"
            android:id="@+id/whereField"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="44dp"
            android:autofillHints=""
            android:hint="@string/hint_string"
            tools:targetApi="o"
            android:layout_marginTop="44dp"
            app:layout_constraintTop_toBottomOf="@+id/amountField"
            android:backgroundTint="@color/colorPrimary"/>

    <!--Rögzítés-->
    <Button
            android:text="@string/income_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.498"
            android:background="@color/closed_fab"

            android:layout_marginTop="80dp"
            app:layout_constraintTop_toBottomOf="@+id/whereField"
    />

</androidx.constraintlayout.widget.ConstraintLayout>