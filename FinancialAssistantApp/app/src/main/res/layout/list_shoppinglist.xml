<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@drawable/border"
        android:id="@+id/list_layout">

    <CheckedTextView
            android:id="@+id/listElement"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:checkMark="@drawable/unchecked_circle_black"
            android:checked="false"
            android:gravity="center"
            android:text="@string/product_namehint"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="2dp"
            android:backgroundTint="#FF9800"
            android:checkMarkTint="#090000"
            android:drawableTint="#FDF30202"/>

    <TextView
            android:layout_width="50dp"
            android:id="@+id/unitField"
            android:layout_height="wrap_content"
            android:layout_marginStart="139dp"

            android:layout_marginTop="4dp"
            android:hint="@string/shoppinglist_hint_darab"
            android:layout_alignStart="@+id/listElement"
            android:textAlignment="center"/>

    <TextView
            android:layout_width="50dp"
            android:id="@+id/mennyiseg"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:hint="@string/shoppinglist_hint_unit"
            android:layout_toEndOf="@+id/unitField"
            android:layout_marginStart="10dp"/>
</RelativeLayout>