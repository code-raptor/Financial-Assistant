<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/listPreferredItemHeightLarge"
        android:background="@drawable/border"
        android:id="@+id/list_layout">

    <!--Egység-->
    <TextView
            android:text="@string/receiptproduct_egyseg"
            android:layout_width="89dp"
            android:layout_height="wrap_content"
            android:id="@+id/egyseg"
            android:textSize="21sp"
            android:textAllCaps="false"
            android:textAlignment="textStart"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="6dp"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/mennyiseg"
            android:layout_marginStart="12dp"/>
    <!--Termék név-->
    <TextView
            android:text="@string/receiptproduct_name"
            android:layout_width="214dp"
            android:layout_height="27dp"
            android:id="@+id/name"
            android:layout_marginStart="5dp"
            android:textStyle="bold"
            android:textSize="21sp"
            android:textAllCaps="true"
            android:textAlignment="viewStart"
            android:layout_marginTop="9dp"
            android:layout_marginBottom="8dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"/>
    <!--Egységár-->
    <TextView
            android:text="@string/receiptproduct_egysegar"
            android:layout_width="92dp"
            android:layout_height="wrap_content"
            android:id="@+id/egysegar"
            android:textSize="21sp"
            android:textAllCaps="false"
            android:textAlignment="center"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="6dp"
            android:layout_toEndOf="@+id/egyseg"
            android:layout_marginStart="12dp"/>
    <!--Mennyiség-->
    <TextView
            android:text="@string/receiptproduct_mennyiseg"
            android:layout_width="46dp"
            android:layout_height="wrap_content"
            android:id="@+id/mennyiseg"
            android:layout_marginStart="16dp"
            android:textSize="21sp"
            android:textAllCaps="false"
            android:textAlignment="center"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="6dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"/>
    <!--Ár-->
    <TextView
            android:text="@string/receiptproduct_ar"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:id="@+id/price"
            android:layout_marginStart="261dp"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textAlignment="center"
            android:layout_marginTop="8dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="42dp"/>

</RelativeLayout>