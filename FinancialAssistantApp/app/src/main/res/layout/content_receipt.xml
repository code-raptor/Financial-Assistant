<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context=".ReceiptActivity"
        tools:showIn="@layout/activity_receipt"
        android:background="@android:color/transparent">

    <!--Cím-->
    <TextView
            android:text="@string/receipt_string"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:id="@+id/cim"
            android:textSize="24sp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.496"/>
    <!--Dátum-->
    <TextView
            android:text="@string/base_date_string"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/receiptDate"
            android:textSize="18sp"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/cim"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/dateField"
            app:layout_constraintHorizontal_bias="0.303"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            android:textAlignment="center"
            android:id="@+id/dateField"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="24dp"
            android:autofillHints=""
            android:hint="@string/base_date_hint"
            tools:targetApi="o"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/cim"
            android:backgroundTint="@color/colorPrimary"
            android:textCursorDrawable="@color/closed_fab"
            android:textColorHighlight="@color/closed_fab"
            android:textColorLink="@color/closed_fab"
            android:focusable="false"
            tools:ignore="KeyboardInaccessibleWidget"/>
    <!--Összeg-->
    <TextView
            android:text="@string/receipt_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/receiptAmount"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/amountField"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/receiptDate"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.319"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:textAlignment="center"
            android:id="@+id/amountField"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="24dp"
            android:autofillHints=""
            android:hint="@string/receipt_amounthint"
            tools:targetApi="o"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/dateField"
            android:backgroundTint="@color/colorPrimary"/>
    <!--Megjegyzés-->
    <TextView
            android:text="@string/receipt_descString"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/descript"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_marginTop="32dp"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/receiptAmount"
            app:layout_constraintEnd_toStartOf="@+id/descriptField"
            android:layout_marginEnd="8dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:ems="10"
            android:textAlignment="center"
            android:id="@+id/descriptField"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="24dp"
            android:autofillHints=""
            tools:targetApi="o"
            android:layout_marginTop="8dp"
            android:backgroundTint="@color/colorPrimary"
            app:layout_constraintTop_toBottomOf="@+id/amountField"/>
    <!--Új termék-->
    <TextView
            android:text="@string/receipt_newproduct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mennyiseg"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/descript"
            android:layout_marginEnd="16dp" app:layout_constraintEnd_toStartOf="@+id/fab"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            app:srcCompat="@drawable/add"
            android:id="@+id/fab"
            app:backgroundTint="@color/closed_fab"
            app:fabSize="mini"
            app:fab_colorNormal="@color/closed_fab"
            app:fab_colorRipple="@color/ripple_fab"
            app:fab_colorPressed="@color/open_fab"
            app:rippleColor="@color/ripple_fab"
            android:focusable="true"
            app:layout_constraintTop_toBottomOf="@+id/descriptField"
            android:layout_marginTop="8dp" android:layout_marginEnd="196dp" app:layout_constraintEnd_toEndOf="parent"
    />


</androidx.constraintlayout.widget.ConstraintLayout>